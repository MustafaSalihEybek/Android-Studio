<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/cardViewBgColor"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="128dp"
            android:scaleType="fitXY"
            android:id="@+id/custom_layout_movie_imageViewPoster"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Filmin Adı: "
                    android:textSize="15sp"
                    android:textColor="@color/textColorWhite"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Deadpool"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:id="@+id/custom_layout_movie_textViewMovieName"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textColorWhite"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Çıkış Tarihi: "
                    android:textSize="15sp"
                    android:textColor="@color/textColorWhite"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="1994-09-10"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:id="@+id/custom_layout_movie_textViewMovieReleaseDate"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textColorWhite"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Imdb: "
                    android:textSize="15sp"
                    android:textColor="@color/textColorWhite"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="7.3"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:id="@+id/custom_layout_movie_textViewMovieImdb"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textColorWhite"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/textColorWhite"
                    android:textSize="15sp"
                    android:text="Konusu"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/textColorWhite"
                    android:textSize="13sp"
                    android:maxLines="4"
                    android:id="@+id/custom_layout_movie_textViewMovieSummary"
                    android:ellipsize="end"
                    android:text="Konusu"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Detay İçin Tıkla->"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:id="@+id/custom_layout_movie_textViewMoreDetail"
                    android:textColor="@color/textColorWhite"
                    android:textStyle="bold"
                    android:layout_marginRight="3dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>